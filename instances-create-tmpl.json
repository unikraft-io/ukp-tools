{
    "image": "unikraft.io/official/nginx:latest",
    "args": [
      "-c",
      "/nginx/conf/nginx.conf"
    ],
    "service_group": {
      "services": [
        {
          "port": 443,
          "destination_port": 80,
          "handlers": [
            "tls", "http"
          ]
        },
        {
          "port": 80,
          "destination_port": 443,
          "handlers": [
            "http", "redirect"
          ]
        }
      ]
    },
    "volumes": [
      {
        "size_mb": 10,
        "at": "/mnt/",
        "readonly": false
      }
    ],
    "memory_mb": 16,
    "autostart": true,
    "wait_timeout_ms": 10000
}
